<site name="National Geographic Video" homepage="https://video.nationalgeographic.com/">
	<example>https://video.nationalgeographic.com/tv/changing-earth</example>
	<example>https://video.nationalgeographic.com/video/weirdest-superb-lyrebird</example>

	<tags><tag>documentaries</tag></tags>

	<host>video.nationalgeographic.com</host>
	<scrape>
		<match>@video\.nationalgeographic\.com/(?:tv|video)/\w@</match>
		<extract>@guid="(?'id'[-\w]+)"@</extract>
	</scrape>
	<iframe src="//player.d.nationalgeographic.com/players/ngsvideo/share/?guid={@id}"/>
</site>